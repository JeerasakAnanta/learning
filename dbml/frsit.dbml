Table users {
  id integer [primary key]
  username varchar
  role varchar
  created_at timestamp
}

// # Schema Definition
Schema Definition

// table  posts 
Table posts {
  id integer [primary key]
  user_id integer [ref: > users.id]
  title varchar 
  content text
  created_at timestamp
}

// schema  comments 
Table comments {
  id integer [primary key]
  post_id integer [ref: > posts.id]
  user_id integer [ref: > users.id]
  content text
  created_at timestamp
} 
